        <!-- Action Buttons -->
        <div class="space-y-4">
          <%= link_to new_session_path, class: "block w-full bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white font-bold py-4 px-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-200" do %>
