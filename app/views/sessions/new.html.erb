<div class="min-h-screen bg-gradient-to-br from-red-600 via-red-700 to-red-800 flex items-center justify-center px-4 py-12">
  <div class="max-w-md w-full">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
      <div class="inline-block bg-white/10 backdrop-blur-sm rounded-full p-4 mb-4">
        <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"/>
        </svg>
      </div>
      <h2 class="text-3xl font-bold text-white mb-2">Login Anggota</h2>
      <p class="text-red-100">Gerakan Rakyat</p>
    </div>

    <!-- Login Form Card -->
    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <% if flash[:alert] %>
        <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <p class="text-red-700 text-sm"><%= flash[:alert] %></p>
          </div>
        </div>
      <% end %>

      <%= form_with url: session_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <label for="nik" class="block text-sm font-semibold text-gray-700 mb-2">
            Nomor Induk Kependudukan (NIK)
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"/>
              </svg>
            </div>
            <%= text_field_tag :nik, params[:nik], 
              placeholder: "Masukkan 16 digit NIK", 
              required: true,
              maxlength: 16,
              pattern: "\\d{16}",
              class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">16 digit sesuai KTP</p>
        </div>

        <div>
          <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
            Nomor Handphone
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
            <%= telephone_field_tag :phone, params[:phone], 
              placeholder: "08xxxxxxxxxx", 
              required: true,
              class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">Nomor HP yang terdaftar</p>
        </div>

        <div>
          <%= f.submit "Masuk", 
            class: "w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-4 rounded-lg shadow-lg transform hover:scale-105 transition duration-200 cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          Belum punya akun?
          <%= link_to "Daftar di sini", new_registration_path, class: "font-semibold text-red-600 hover:text-red-700 hover:underline" %>
        </p>
      </div>

      <div class="mt-6 pt-6 border-t border-gray-200">
        <%= link_to root_path, class: "flex items-center justify-center text-sm text-gray-600 hover:text-red-600 transition" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Kembali ke Beranda
        <% end %>
      </div>
    </div>

    <!-- Info Card -->
    <div class="mt-6 bg-white/10 backdrop-blur-sm rounded-lg p-4 text-white text-center">
      <p class="text-sm">
        <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        Gunakan NIK dan nomor HP yang Anda daftarkan
      </p>
    </div>
  </div>
</div>
